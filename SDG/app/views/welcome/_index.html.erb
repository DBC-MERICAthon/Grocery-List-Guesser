<div class="test"><%= @u.name %>'s List:</div>



<div class="test">
  <% @list.each do |item| %>

  <div class="item-card">
    <div class="card-category">
      <i class="fa fa-coffee card-category-icon"></i>
      <h3 class="card-category-text">Category: <%= item.first.category %></h3>
    </div>
    <div class="card-title">
      <h1 class="card-title-text"><%= item.first.name.upcase %></h1>
    </div>
    <div class="card-description">
      <h5 class="card-description-title">
        Description:
      </h5>
      <p class="card-decription-text">
        <%= item.first.description %>
      </p>
    </div>
    <div class="card-options">
      <i class="fa fa-square-o fa-lg checkbox-icon"></i>
      <i class="fa fa-pencil-square-o fa-lg edit-icon"></i>
      <i class="fa fa-trash-o fa-lg delete-icon"></i>

    </div>
  </div>
  <% end %>
</div>



