
<div id=<%= @item.id %> class="item-card">
  <div class="card-category">
    <i class="fa fa-coffee card-category-icon"></i>
    <h3 class="card-category-text"><%= @item.category %></h3>
  </div>
  <div class="card-title">
    <h1 class="card-title-text"><%= @item.name.upcase %></h1>
  </div>
  <div class="card-description">
    <h5 class="card-description-title">
      Description:
    </h5>
    <p class="card-decription-text">
      <%= @item.description %>
    </p>
  </div>
  <div class="card-options">
    <i class="fa fa-square-o fa-lg checkbox-icon"></i>
    <i class="fa fa-trash-o fa-lg delete-icon"></i>
  </div>
</div>



